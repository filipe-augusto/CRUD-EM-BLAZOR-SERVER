@page "/categories"
@using BlazingShop.Data
@using BlazingShop.Models
@using Microsoft.EntityFrameworkCore
@using System.Globalization
@inject AppDbContext Context;

<h1>Categories</h1>

<a href="categories/create" class="btn btn-primary"><i class="oi oi-plus"></i> CREATE </a>
<table class="table">
    <thead>
        <tr>
            <td>#</td>
            <td>Title</td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in _categories)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Title</td>
   
                <td>

                    <a href="/categories/edit/@product.Id">EDIT</a>
                    <a href="/categories/delete/@product.Id">DELETE</a>
                </td>
            </tr>
        }
    </tbody>
</table>



@code {
    private List<Category> _categories = new List<Category>();

    protected override async Task OnInitializedAsync()
    {
        _categories = await Context.Categories.AsNoTracking().ToListAsync();
    }

}
